<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"

    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_recommended"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <CheckBox
                android:id="@+id/recommended_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/checkboxstyle"
                android:gravity="center"
                android:button="@android:color/transparent"
                android:paddingLeft="5dp"
                android:textColor="@android:color/transparent"
                android:textSize="20sp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_recomended_tempat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="65dp"
                    android:text="Pantai Parangtritis"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/txt_recomended_jarak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_recomended_tempat"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawablePadding="10dp"
                    android:text="5.0 KM"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>