<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTripActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_Kegiatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Rencana Liburan Kamu?"
                android:textColor="#1D3364"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="20dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_mendaki"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:clipToPadding="true"
                        android:background="#f5f5f5"
                        app:cardCornerRadius="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <CheckBox
                                android:id="@+id/mendaki"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle_2"
                                android:text="mendaki"
                                android:onClick="checkBoxKegiatanOnClicked"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="#F7B640"
                                android:textSize="15sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_berenang"
                        android:layout_toRightOf="@+id/card_mendaki"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:clipToPadding="true"
                        android:background="#f5f5f5"
                        app:cardCornerRadius="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <CheckBox
                                android:id="@+id/berenang"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle_2"
                                android:text="berenang"
                                android:onClick="checkBoxKegiatanOnClicked"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="#F7B640"
                                android:textSize="15sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_goa"
                        android:layout_toRightOf="@id/card_berenang"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:clipToPadding="true"
                        android:background="#f5f5f5"
                        app:cardCornerRadius="10dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <CheckBox
                                android:id="@+id/goa"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle_2"
                                android:text="menelusuri goa"
                                android:onClick="checkBoxKegiatanOnClicked"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="#F7B640"
                                android:textSize="15sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_jogging"
                        android:layout_below="@+id/card_mendaki"
                        android:layout_marginLeft="15dp"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:clipToPadding="true"
                        android:background="#f5f5f5"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
