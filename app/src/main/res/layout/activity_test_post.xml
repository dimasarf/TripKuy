<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#F7B640"
                android:src="@drawable/vectortrip"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Pilih Preferensi Kamu!"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                app:fontFamily="@font/allerta" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Supaya kami dapat memberi rekomendasi optimal!"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                app:fontFamily="@font/allerta" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:clipToPadding="true"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/sportsImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/yogyakarta" />
                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle"
                                android:text="Prambanan"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </FrameLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:clipToPadding="true"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/malioboro_2" />
                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle"
                                android:text="MalioBoro"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </FrameLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:clipToPadding="true"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/parangtritis" />
                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle"
                                android:text="Parangtritis"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </FrameLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:clipToPadding="true"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/taman_sari" />
                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle"
                                android:text="Taman Sari"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </FrameLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:clipToPadding="true"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/tugujogja" />
                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle"
                                android:text="Tugu Jogja"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </FrameLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:clipToPadding="true"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/breksi" />
                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle"
                                android:text="Breksi"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="10dp"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </FrameLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:clipToPadding="true"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/monjali" />
                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle"
                                android:text="Monumen Jogja Kembali"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </FrameLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:clipToPadding="true"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/paralayang" />
                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle"
                                android:text="Bukit Paralayang"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </FrameLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    android:clipToPadding="true"
                    app:cardCornerRadius="20dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:adjustViewBounds="true"
                                android:src="@drawable/kalibiru" />
                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/checkboxstyle"
                                android:text="Kalibiru"
                                android:gravity="center"
                                android:button="@android:color/transparent"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </FrameLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:layout_marginTop="25dp">

                <Button
                    android:id="@+id/btn_prev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/white"
                    android:text="Sebelumnya"
                    android:textColor="#F7B640"

                    />

                <Button
                    android:id="@+id/btn_selesai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="29dp"
                    android:background="#1D3364"
                    android:baselineAligned="false"
                    android:drawableRight="@drawable/ic_check"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="Selesai"
                    android:textColor="#F7B640"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>