<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#F7B640"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/profilpic"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/triplogo"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@android:color/white"
                        android:text="Dimastyo Muhaimin Arifin"/>
                </LinearLayout>


            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/kategori"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@drawable/ic_receipt_navy_24dp"
                        android:drawableRight="@drawable/ic_chevron_right_grey_35dp"
                        android:text="Kategori Pilihan"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"
                        android:gravity="left|center"
                        android:drawablePadding="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/darker_gray"/>
                    <TextView
                        android:id="@+id/txt_profil"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:drawableLeft="@drawable/ic_person_navy_24dp"
                        android:drawableRight="@drawable/ic_chevron_right_grey_35dp"
                        android:text="Profil"
                        android:textSize="20sp"
                        android:gravity="left|center"
                        android:drawablePadding="20dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_exit_to_app_navy_24dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/white"
                android:text="LOGOUT"
                android:textColor="@color/colorPrimary"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>